<table>
  <thead>
    <tr>
      <% report.columns.each do |name, column| %>
        <th class="<%= column.class_names %>">
          <%= column.title %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% report.records.each do |record| %>
      <tr>
        <% report.columns.each do |name, column| %>
          <td class="<%= column.class_names %>">
            <% if column.helper %>
              <%= send(column.helper, record) %>
            <% else %>
              <%= report.value_for(record, name) %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
